<% extend('../layouts/dashboard-layout') %>
 <div class="main container-fluid my-4">
    <div class="row justify-content-center">
      <div class="col-sm-6">

        <form method="POST" action="/auth/forget">
          <div class="form-group">
            <h1>忘記密碼</h1>
            <label for="exampleInputEmail1">Email </label>
            <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="請輸入 email"
              required>
            <small id="emailHelp" class="form-text text-muted">我們不會隨意散佈你的 Email</small>
          </div>
          <div class="text-right mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
 </div>